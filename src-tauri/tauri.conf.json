{
  "productName": "Sniive",
  "version": "0.1.0",
  "identifier": "com.sniive.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sniive",
        "width": 300,
        "height": 80,
        "contentProtected": true,
        "hiddenTitle": true,
        "closable": false,
        "maximizable": false,
        "minimizable": false,
        "resizable": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["sniive"]
      }
    },
    "cli": {
      "args": [
        {
          "name": "auth",
          "index": 1,
          "takesValue": true
        }
      ]
    }
  }
}
