{
  "productName": "Sniive",
  "version": "0.1.0",
  "identifier": "com.sniive.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sniive",
        "width": 300,
        "height": 80,
        "contentProtected": true,
        "hiddenTitle": true,
        "closable": false,
        "maximizable": false,
        "minimizable": false,
        "resizable": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": "72e817394d16924e27fc309a67634ed1f72d9105",
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.sectigo.com"
    },
    "macOS": {
      "entitlements": "Entitlements.plist",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["sniive"]
      }
    },
    "cli": {
      "args": [
        {
          "name": "auth",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERFRUVCOEM0NkJFNjcwRDQKUldUVWNPWnJ4TGp1M21PU2RIYURHSyt0MzRQZjdueHBMZEJLK1Z4UGNnSklEZTNvM3U2ZjMyN1MK",
      "endpoints": [
        "https://github.com/sniive/sniive-desktop/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
